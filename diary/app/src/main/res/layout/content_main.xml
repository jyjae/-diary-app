                        <TextView
                            android:id="@+id/itg6"
                            android:layout_width="45dp"
                            android:layout_height="42dp"
                            android:text=" 0"
                            android:textSize="30dp" />

                        <ImageView
                            android:id="@+id/img7"
                            android:layout_width="45dp"
                            android:layout_height="42dp"
                            android:src="@drawable/sm" />

                        <TextView
                            android:id="@+id/itg7"
                            android:layout_width="45dp"
                            android:layout_height="42dp"
                            android:text=" 0"
